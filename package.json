    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,less}": "prettier --ignore-path ./.prettierignore --write ",
    "*.{js,jsx,ts,tsx}": "eslint"
  }
